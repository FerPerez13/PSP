public class Ejercicio2 {

	public static void main(String[] args){
		Hi hilo1 = new Hi();
		Hi2 hilo2 = new Hi2();
		hilo1.start();
		hilo2.start();
		System.out.println("Dejaos de gilipolleces");
	}

}

