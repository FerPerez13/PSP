package Tema2;

class Prioridad extends Thread {
	public void run() {
		System.out.println("Soy el " + Thread.currentThread().getName() + " empezando.");
		for (int i = 0; i < 10; i++)
			System.out.println("Soy el " + Thread.currentThread().getName() + " iteraciÃ³n " + i);
		System.out.println("Soy el " + Thread.currentThread().getName() + " acabando.");
	}
}

public class HilosPrioridad {
	public static void main(String[] args) {
		Prioridad thread1 = new Prioridad();
		thread1.setName("Hilo 1");
		thread1.setPriority(Thread.MAX_PRIORITY);
		Prioridad thread2 = new Prioridad();
		thread2.setName("Hilo 2");
		thread2.setPriority(Thread.MAX_PRIORITY);
		Prioridad thread3 = new Prioridad();
		thread3.setName("Hilo 3");
		thread3.setPriority(Thread.MAX_PRIORITY);
		Prioridad thread4 = new Prioridad();
		thread4.setName("Hilo 4");
		thread4.setPriority(Thread.MAX_PRIORITY);
		Prioridad thread5 = new Prioridad();
		thread5.setName("Hilo 5");
		thread5.setPriority(Thread.MAX_PRIORITY);
		Prioridad thread6 = new Prioridad();
		thread6.setName("Hilo 6");
		thread6.setPriority(Thread.MAX_PRIORITY);
		
		thread1.start();
		thread2.start();
		thread2.start();
		thread3.start();
		thread4.start();
		thread5.start();
		thread6.start();
	}
}