		}
	}


}

class Esperar { 
	public static void esperar(long milis) {
		try {
			Thread.sleep(milis);
		} catch (InterruptedException e) {
			System.err.println("Tiene que esperar, esta completo");
			System.exit(-1);
		}
	}
}

class Barrera{
	
	private int plazas;
	
	public Barrera(int plazas){
		this.plazas=plazas;
	}
	
}

class Coche extends Thread{
	
