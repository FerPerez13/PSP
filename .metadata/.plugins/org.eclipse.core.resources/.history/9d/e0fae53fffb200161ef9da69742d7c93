public class Ejercicio2 {
	
	public static void main(String[] args){
		
		Hi1 hilo1 = new Hi1();
		Hi2 hilo2 = new Hi2();
		
		hilo1.start();
		hilo1.join();
		hilo2.start();
		
		
		System.out.println("Dejaos de gilipolleces");
	}

}

class Hi1 extends Thread{
	private String frase = "A m√≠ me	rebota y a ti te explota";
	public void run(){
		for(int i=0;i<5;i++){
			System.out.println(frase);
			
			
		}
	}
}

class Hi2 extends Thread{
	private String frase = "Y tu mas";
	public void run(){
		for(int i=0;i<5;i++){
			System.out.println(frase);
		}
	}
}